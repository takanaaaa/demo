<%= form_with model:group, local:true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文%>
    <%= f.text_area :introduction, rows: "15", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿" %>
  </div>
<% end %>