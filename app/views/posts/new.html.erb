<%= render "layouts/header" %>
<div class="container">
  <div class="col-md-8 offset-md-2">
    <%= form_with model:@post, local:true do |f| %>
      <div class="form-group">
        <%= f.text_area :body, rows: "15", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :画像 %>
         <%= f.attachment_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿" %>
      </div>
    <% end %>
  </div>
</div>