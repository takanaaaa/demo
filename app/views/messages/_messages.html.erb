  <% messages.each do |message| %>
    <tr>
      <td><%= attachment_image_tag message.user, :profile_image, fallback: "no-image.jpg", class: "profile_image_sm" %></td>
      <td>
        <%= message.user.name %>
        <P id="user-message<%= message.id %>"><%= message.content %></P>
      </td>
      <td><%= message.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
    </tr>
  <% end %>