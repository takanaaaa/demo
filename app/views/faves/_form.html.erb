<%= form_with model:fave, local:true do |f| %>
  <div class="form-group">
    <%= f.label :名前%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文%>
    <%= f.text_area :introduction, rows: "15", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "作成" %>
  </div>
<% end %>